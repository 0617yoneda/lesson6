<p id="notice">
  <%if flash[:notice] %>
    <%= flash[:notice]  %>
  <% end %>
</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--プロフィール-->
      <%= render "users/profile", user: @user %>
      <!--新規投稿-->
      <%= render "books/new", book: @book %>
    </div>
    <div class="offset-md-1 col-md-8">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@sbook.user) do %>
              <%= attachment_image_tag  @sbook.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
              <br><%= @sbook.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@sbook) do %>
              <%= @sbook.title %>
            <% end %>
          </td>
          <td><%= @sbook.body %></td>
          <td>
            <%if @sbook.user.id == current_user.id  %>
              <%= link_to "Edit", edit_book_path(@sbook), class:"btn btn-sm btn-success" %>
            <% else %>
              <% if @sbook.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(@sbook), method: :delete do  %>
                  <i class="far fa-heart"><%= @sbook.favorites.count %></i>
             　   <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to book_favorites_path(@sbook), method: :post do  %>
                  <i class="far fa-heart"><%= @sbook.favorites.count %></i>
                <% end %>
              <% end %>
              </p>
            <% end %>
          </td>
          <td>
            <% if @sbook.user.id == current_user.id %>
              <%= link_to "Destroy", book_path(@sbook), method: :delete, data: { confirm: "本当に消しますか？" }, class:"btn btn-sm btn-danger" %>
            <% else %>
              <p>コメント数:<%= @sbook.book_comments.count %></p>
            <% end %>
          </td>
        </tr>
      </table>


      <div class="body-comment">
        <table>
        <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= link_to user_path(comment.user) do %>
                <%= attachment_image_tag  comment.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
                <br><%= comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= comment.comment %>
            </td>
            <td>
              <% if comment.user.id == current_user.id %>
<<
                <%= link_to "Destroy", book_book_comment_path(comment.book.id, comment), method: :delete, class:"btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </table>
      </div>
      <div class="new-comment">
        <%= form_with model:[@sbook, @book_comment], local: true do |f| %>
          <%= f.text_area :comment, rows:'150', size:"100" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


